<%- include('partials/header') -%>

<main class="container mx-auto relative mb-28 md:max-w-2xl">
  
    <section>
      <h1 class="text-center text-4xl"></h1>
      <div class="py-2">
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el => { %>
            <div class="alert alert-error"><%= el.msg %></div>
          <% }) %>
        <% } %>
        <% if (locals.messages.info) { %>
          <% messages.info.forEach( el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
          <% }) %>
        <% } %>
        <% if (locals.messages.success) { %>
          <% messages.info.forEach( el => { %>
            <div class="alert alert-success"><%= el.msg %></div>
          <% }) %>
        <% } %>
      </div>
      <form action="/password-reset" method="POST">
        <div class="">
          <label for="password" class="label">Password</label>
          <input type="password" class="input input-bordered" id="password" name="password" required>
        </div>
        <div class="">
          <label for="confirmPassword" class="label">Confirm Password</label>
          <input type="password" class="input input-bordered" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>
  
</main>

<%- include('partials/footer') -%>
