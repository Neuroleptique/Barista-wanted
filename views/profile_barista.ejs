<%- include('partials/header') -%>
<div class="container">
  <h1>this is <%= user.userName %>'s profile</h1>
</div>
<form>
  <div class="mb-3">
      <label for="firstName" class="form-label">First Name</label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="<%= barista.firstName %> ">
  </div>
  <div class="mb-3">
    <label for="LastName" class="form-label">Last Name</label>
    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= barista.lastName %> ">
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %> ">
  </div>
  <div class="mb-3">
    <label for="phone" class="form-label">Phone Number</label>
    <input type="tel" class="form-control" id="phone" name="phone" value="<%= barista.phone || null %> ">
  </div>
  <!-- <div class="mb-3">
    <label for="photo" class="form-label">Headshot</label>
    <input type="file" class="form-control" id="photo" name="file">
  </div> -->
  <div class="mb-3">
    <label for="ig" class="form-label">Instagram</label>
    <input type="text" class="form-control" id="ig" name="ig" value="<%= barista.ig || null %> ">
  </div>
  <!-- add uploaded image here -->
  <div class="mb-3">
    <label for="exp" class="form-label">Barista experience</label>
    <select id="exp" class="form-control" id="exp" name="exp">
      <option value="" <% if(!barista.exp) { %> 
        <%= 'selected' %> 
        <% } %> >--Please choose an option--</option>
      <option value="0" <% if(barista.exp == "0") { %> 
        <%= 'selected' %> 
        <% } %>>Less than 1 year</option>
      <option value="1" <% if(barista.exp == "1") { %> 
        <%= 'selected' %> 
        <% } %>>1-3 years</option>
      <option value="3" <% if(barista.exp == "3") { %> 
        <%= 'selected' %> 
        <% } %>>Over 3 years</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="more" class="form-label">Anything else to add</label>
    <!-- data won't render in textarea -->
    <textarea class="form-control" id="more" name="more" value="<%= barista.more || null %>"></textarea>
  </div>
  <fieldset>
    <legend>Would you like to be notified BY EMAIL for new availability?</legend>
    <div class="mb-3">
      <input type="checkbox" id="notification" name="notification" value="yes" <% if(barista.notification == true) { %> 
      <%= 'checked' %> 
      <% } %> >
      <label for="ig" class="form-label">Yes please!</label>
    </div>
    <input type="text" id="userID" name="userID" value="<%= user.id %>" hidden>
  </fieldset>
  
  <button id="updateProfile" type="button" class="btn btn-primary">Submit</button>
</form>
<%- include('partials/footer') -%>