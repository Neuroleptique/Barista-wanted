<%- include('partials/header') -%>
<div class="container">
  <h1>this is <%= user.firstName.replace( /\w/, c => c.toUpperCase() ) %>'s profile</h1>
</div>
<form>
  <div class="mb-3">
      <label for="firstName" class="form-label">First Name</label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="<%= user.firstName %> ">
  </div>
  <div class="mb-3">
    <label for="LastName" class="form-label">Last Name</label>
    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= user.lastName %> ">
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %> ">
  </div>
  <div class="mb-3">
    <label for="phone" class="form-label">Phone Number</label>
    <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone || null %> ">
  </div>
  <!-- <div class="mb-3">
    <label for="photo" class="form-label">Headshot</label>
    <input type="file" class="form-control" id="photo" name="file">
  </div> -->
  <div class="mb-3">
    <label for="ig" class="form-label">Instagram</label>
    <input type="text" class="form-control" id="ig" name="ig" value="<%= user.ig || null %> ">
  </div>
  <!-- add uploaded image here -->
  <div class="mb-3">
    <label for="exp" class="form-label">Barista experience</label>
    <select id="exp" class="form-control" id="exp" name="exp">
      <option value="">--Please choose an option--</option>
      <option value="0">Less than 1 year</option>
      <option value="1">1-3 years</option>
      <option value="3">Over 3 years</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="more" class="form-label">Anything else to add</label>
    <textarea class="form-control" id="more" name="more" value="<%= user.more || null %>"></textarea>
  </div>
  <fieldset>
    <legend>Would you like to be notified BY EMAIL for new availability?</legend>
    <div class="mb-3">
      <input type="checkbox" id="notification" name="notification" value="yes" <% if(user.notification == true) { %> 
      <%= 'checked' %> 
      <% } %> >
      <label for="ig" class="form-label">Yes please!</label>
    </div>
  </fieldset>
  
  <button id="updateProfile" type="button" class="btn btn-primary">Submit</button>
</form>
<%- include('partials/footer') -%>