<%- include('partials/header') -%>

<main class="container mx-auto relative md:text-3xl md:max-w-2xl">
  
    <section>
      <h1 class="text-center text-2xl md:text-4xl">Log in to your account</h1>
      <div class="py-2">
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el => { %>
            <div class="alert alert-error"><%= el.msg %></div>
          <% }) %>
        <% } else if (locals.messages.info) { %>
          <% messages.info.forEach( el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
          <% }) %>
        <% } else if (locals.messages.success) { %>
          <% messages.success.forEach( el => { %>
            <div class="alert alert-success"><%= el.msg %></div>
          <% }) %>
        <% } %>
      </div>
      <form action="/login" method="POST">
        <div class="">
          <label for="exampleInputEmail1" class="label">Email address</label>
          <input
            type="email"
            class="input input-bordered"
            id="exampleInputEmail1"
            name="email"
          />
        </div>
        <div class="">
          <label for="exampleInputPassword1" class="label">Password</label>
          <input
            type="password"
            class="input input-bordered"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="flex justify-between text-sm">
          <span><a class="link" href="/password_reset_request">Forgot password?</a></span>
          <span><a class="link" href="/resend_email_confirmation">Resend verification email</a></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>
  
</main>

<%- include('partials/footer') -%>
