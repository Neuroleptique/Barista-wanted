<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Barista Wanted</title>
    <meta name="description" content="Barista Wanted is a plaform which allows cafÃ© to post their available shifts and let baristas to put themselves available.">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
    <link rel="manifest" href="/images/favicon/site.webmanifest">
    <link rel="mask-icon" href="/images/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/output.css" />
    <script>
      // It's best to inline this in `head` to avoid FOUC (flash of unstyled content) when changing pages or themes
      if (
        (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches))
      ) {
        document.documentElement.setAttribute("data-theme", "night");
      } else {
        document.documentElement.setAttribute("data-theme", "autumn");
      }
    </script>
    <script src="https://js.hcaptcha.com/1/api.js" async defer></script>
  </head>
  <body class="px-4">
    <nav class="relative container mx-auto p-6">
      <div class="navbar bg-base-100">
        <div class="hidden navbar-start md:inline">
          <a href="/"><img class="h-12" src="/images/barista.png" alt="logo of barista pouring coffee"></a>
        </div>

        <div class="navbar-center">
          <a href="/dashboard" class="btn btn-ghost normal-case text-2xl md:text-4xl font-mono">Barista Wanted</a>
        </div>

        <div class="navbar-end">
          <!-- Mobile Hamburger Menu -->
          <div class="dropdown dropdown-bottom dropdown-end">
            <label tabindex="0" class="btn btn-ghost lg:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-7 h-7 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </label>
            <ul tabindex="0" class="menu dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52 text-lg md:text-xl">
              <% if (user) { %>
                <li class="text-xl">
                  <a href="/profile">Profile</a>
                </li>
                <li>
                  <a href="/logout">Logout</a>
                </li>
                
              <% } else { %>
                <li>
                  <a href="/login">Login</a>
                </li>
                <li class="pl-4 py-2">                  
                    Sign-up            
                </li>
                <li><a href="/signup_barista"><i class="fa-solid fa-angle-right fa-sm"></i>Barista</a></li>
                <li><a href="/signup_cafe"><i class="fa-solid fa-angle-right fa-sm"></i>Shop Owner</a></li>
              <% } %>
            </ul>
          </div>       
          <!-- Large Screen Dropdown Menu -->
          <div class="hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
              <% if (user) { %> 
                <li>
                  <a href="/profile">Profile</a>
                </li>
                <li>
                  <a href="/logout">Logout</a>
                </li>

              <% } else { %>
                <li>
                  <a href="/login">Login</a>
                </li>
                <li tabindex="0">
                  <a>
                    Sign-up
                    <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/></svg>
                  </a>
                  <ul class="p-2">
                    <li><a href="/signup_barista">Barista</a></li>
                    <li><a href="/signup_cafe">Shop Owner</a></li>
                  </ul>
                </li>
              <% } %>
            </ul>
          </div>
        </div>

      </div>
    </nav>

