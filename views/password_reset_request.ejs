<%- include('partials/header') -%>

<main class="container mx-auto relative text-3xl md:max-w-2xl">
  
    <section>
      <div class="flex flex-row pb-5">
        <div class="tooltip flex-none" data-tip="back to login">
          <a class="left-2 btn" href="/login">
            <i class="fa-solid fa-arrow-left"></i>
          </a>
        </div>
        <h1 class="flex-1 text-4xl text-center">
          Password Reset Request
        </h1>
      </div>
      <div class="py-2">
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el => { %>
            <div class="alert alert-error"><%= el.msg %></div>
          <% }) %>
        <% } else if (locals.messages.info) { %>
          <% messages.info.forEach( el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
          <% }) %>
        <% } else if (locals.messages.success) { %>
          <% messages.success.forEach( el => { %>
            <div class="alert alert-success"><%= el.msg %></div>
          <% }) %>
        <% } %>
      </div>
      <form action="/password_reset_request" method="POST">
        <div class="form-control">
          <label for="exampleInputEmail1" class="label">Email address</label>
          <input
            type="email"
            class="input input-bordered"
            id="exampleInputEmail1"
            name="email"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>
  
</main>

<%- include('partials/footer') -%>
